{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "lint",
        "type-check",
        "test"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "inputs": [
        "test/**/*spec.ts",
        "test/**/*test.ts"
      ]
    },
    "test:watch": {
      "inputs": [
        "test/**/*spec.ts",
        "test/**/*test.ts"
      ]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "clean:logs": {
      "cache": false
    }
  }
}
