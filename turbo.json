{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "^lint",
        "^type-check",
        "^test"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "health-check": {
      "dependsOn": [
        "lint",
        "type-check"
      ]
    },
    "test": {
      "inputs": [
        "test/**/*spec.ts",
        "test/**/*test.ts"
      ]
    },
    "test:watch": {
      "inputs": [
        "test/**/*spec.ts",
        "test/**/*test.ts"
      ]
    },
    "clean": {
      "dependsOn": [
        "clean:logs",
        "clean:turbo",
        "clean:node-modules",
        "clean:dist"
      ]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false
    },
    "clean:logs": {
      "cache": false
    },
    "clean:turbo": {
      "cache": false
    },
    "clean:node-modules": {
      "cache": false
    },
    "clean:dist": {
      "cache": false
    }
  }
}
