{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@package/ts-config/node.config.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "index.ts",
    ".eslintrc.cjs",
    "vitest.config.*",
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
