{
  "name": "@app/web-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild src/index.ts --platform=node --bundle --minify --outfile=dist/index.js",
    "dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit -p tsconfig.json  --composite false",
    "lint": "eslint . --ext .ts,.tsx,.cts,.mts --fix --ignore-path ../../.gitignore",
    "clean": "rm -rf node_modules && rm -rf dist && rm -rf .turbo"
  },
  "devDependencies": {
    "@package/eslint-config": "*",
    "@package/ts-config": "*",
    "@package/vitest-config": "*",
    "@types/express": "^4.17.17",
    "@types/node": "^18.13.0",
    "esbuild": "^0.17.8",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
